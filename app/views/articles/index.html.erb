<div class="container">
  <h2 class="text-center my-4">Articles</h2>
  <div class="row justify-content-center">
    <% @articles.each do |article| %>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded border no-border" style="height: 19rem;">
          <div class="card-body">
            <% truncated_title = truncate(article.title.to_s, length: 60, separator: ' ', omission: '....') %>
            <% truncated_body = truncate(article.body, length: 150, separator: ' ', omission: '...') %>

            <% if article.body.length > 150 || article.title.length > 60 %>
              <h4 class="card-title"><%= truncated_title %></h4>
              <p class="card-text"><%= truncated_body %></p>
              <a href="<%= article_path(article) %>" class="btn btn-primary">Read more</a>
            <% else %>
              <h4 class="card-title"><%= article.title %></h4>
              <p class="card-text"><%= article.body %></p>
              <a href="<%= article_path(article) %>" class="btn btn-primary">View</a>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= link_to "New Article", new_article_path, class: "btn btn-primary btn-md my-4"%>
  </div>
</div>
