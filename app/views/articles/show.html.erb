<div class="container" style="width: 50rem;">
    <h1 class="text-center">Articles & comments</h1>
    <div class="container">
        <h3><%= @article.title%></h3>
        <p><%= @article.body%></p>
                <div class="d-flex justify-content-center">
                    <div>
                        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-secondary btn-md mx-4" %>
                    </div>
                    <div>
                        <%= form_with model: @article, url: article_path(@article), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } do |form| %>
                        <%= form.submit "Delete", class: "btn btn-danger mx-4" %>
                        <% end %>
                    </div>
                </div>
    </div>
    <div class="container" style="width: 50rem;">
        <h4>Comments</h4>
        <%@article.comments.each do |comment|%>
                    <div class="p-4">
                        <p><%= comment.body%></p>
                    <small>by: <%= comment.commenter%></small>  <small><%= link_to "delete comment", [comment.article, comment], data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %></small>
                    </div>



        <%end%>
    </div>

    <div class="container" style="width: 50rem;">
        <h4>Add a comment:</h4>
        <%= form_with model: [ @article, @article.comments.build ] do |form| %>

        <div class="form-floating mb-3">
            <%= form.text_field :commenter, class: "form-control"%>
            <%= form.label :commenter %>
        </div>

        <div class="form-floating mb-3">
            <%= form.text_area :body, class: "form-control" %>
            <%= form.label :body %>
        </div>

          <p>
            <%= form.submit "do comment", class:"btn btn-warning btn-md"%>
          </p>
        <% end %>
      </div>

</div>
