<div class="container p-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="max-width: 50rem;">
  <%= form_with model: article do |form| %>
    <div class="form-group ">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter the title" %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control", placeholder: "Enter the article body" %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit form.object.new_record? ? "Create New Article" : "Update Article", class: "btn btn-success btn-md my-3" %>
    </div>
  <% end %>
</div>
